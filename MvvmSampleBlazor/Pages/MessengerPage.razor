@page "/Messenger"
@inherits MvvmComponentBase<MessengerPageViewModel>

@if (ViewModel?.Texts is null || !ViewModel.Texts.Any())
{
    <p>Loading...</p>
}
else
{
    @ViewModel.Texts["Messenger"].MarkDownToMarkUp()
    @ViewModel.Texts["How it works"].MarkDownToMarkUp()
}

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await ViewModel!.LoadDocsCommand.ExecuteAsync("Messenger");
    }
}