@page "/SettingUpTheViewModels"
@inherits MvvmComponentBase<ISettingUpTheViewModelsPageViewModel>

@if (ViewModel?.Texts is null || !ViewModel.Texts.Any())
{
    <p>Loading...</p>
}
else
{
    @ViewModel.Texts["What do we want to build"].MarkDownToMarkUp()
    @ViewModel.Texts["Setting up the viewmodels"].MarkDownToMarkUp()
}

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await ViewModel!.LoadDocsCommand.ExecuteAsync("PuttingThingsTogether");
    }
}